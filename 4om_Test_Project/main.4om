#The def macros
set-prv-mcs {{
            (def-prv 
                (def-prv ~n ~f ~p) 
                ({set-prv-mcs 
                    {{
                        (~n ~f ~p)
                        [unw [unw [mcs]]]
                    }}
                })
            )
            [unw [unw [mcs]]]
        }}
        
def-prv def-pub
    (def-pub ~n ~f ~p)
    ({set-pub-mcs 
        {{
            (~n ~f ~p)
            [unw [unw [mcs]]]
        }}
    })

def-prv def-sup
    (def-sup ~n ~f ~p)
    ({set-sup-mcs 
        {{
            (~n ~f ~p)
            [unw [unw [mcs]]]
        }}
    })

def-prv set
    (set ~n ~v)
    ({
        def ~n
        (~n)
        ({~v})
    })

def-prv f-is (~a is ~b) ((False))
def-prv t-is (~a is ~a) ((True))

#Boolean logic
def-prv f-and (False and ~a) ((False))
def-prv t-and (True and ~a) ((~a))

def-prv f-or (False or ~a) ((~a))
def-prv t-or (True or ~a) ((True))

def-prv t-not (not True) ((False))
def-prv f-not (not False) ((True))

#Conditional
def-prv condt (cond ~a True ~b) ({unw ~a})
def-prv condf (cond ~a False ~b) ({unw ~b})

#Lists
def-prv is-empty
    (is-empty ~l)
    ({
        [cntr [~l]] is [cntr {}]
    })

def-prv len
    (len ~l)
    ({cond
        (0)
        [is-empty ~l]
        (1 + [len [tail ~l]])
    })

#Loops
def-prv repeat
    (~a ~n times)
    ({cond 
            (
                [unw ~a]
                [~a [[~n] - 1] times]
            )
            [[~n] >= 1]
            ()
    })

def-prv while
    (~a while ~b)
    ({cond
            (
                [unw ~a]
                [~a while ~b]
            )
            [unw ~b]
            ()
    })

def-prv inner_for
    (~a FOR ~v IN ~l WITH ~i)
    ({
        [set ~i 0]
        [
            (
                [
                    #Set ~o to the next item
                    [set ~o [ind [~i] ~l]]
                    [unw ~a]
                ]
                [set ~i [~i + 1]]
            )
            while
            (~i < [len [~l]])
        ]
    })

def-prv for
    (~a for ~v in ~l)
    ({
        ~a FOR ~v IN ~l WITH [loc (i) (i)]
    })

#bubble, by putting the given expression in a macro, enables private computation
def-prv bubble
    (bubble ~l)
    ({unw ~l})




